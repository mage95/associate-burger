<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Bean.Products" table="products" >
            <id name="id" column="id" type="integer">
              <generator class="increment"></generator>
            </id> 
            <property name="name" column="name" type="string"></property>
            <property name="description" column="description" type="string"></property>
            <property name="price" column="price" type="integer"></property>
            <property name="stock" column="stock" type="integer"></property>
            <property name="image" column="image" type="string"></property>
    </class>
</hibernate-mapping>
